{{#if addNewTag}}
<h1>New Tag</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="type">Type of Tag</label>
        {{input value=type id="type"}}
      </div>
      <button {{action 'saveTag'}}>Save</button>
    </form>
  </div>
{{else}}
  <button id="new-tag-button" class="btn btn-info"{{action 'tagFormShow'}}>New Tag</button>
{{/if}}
