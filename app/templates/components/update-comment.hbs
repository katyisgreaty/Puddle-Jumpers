{{#if updateCommentForm}}
  <h4>Update {{comment.author}}'s comment</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author Name</label>
        {{input value=comment.author id="author" placeholder=comment.author}}
      </div>

      <div class="form-group">
        <label for="rating">Rating</label>
        {{input value=comment.rating id="rating" placeholder=comment.rating}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=comment.content id="content" placeholder=comment.content}}
      </div>

      <button {{action 'update' comment}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateCommentForm'}}>Update</button>
{{/if}}
